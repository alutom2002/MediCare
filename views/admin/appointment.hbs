<section class="admin-users ml-250">
  <div class="user-container">
    <div id="doctor-container" class="container active">
      <div class="doctors-display">
        <table>
          <thead>
            <tr>
              <th>
                Ảnh
              </th>
              <th>
                Tên bác sĩ
              </th>
              <th>
                Tên đăng nhập
              </th>
              <th>
                Email
              </th>
              <th>
                Chuyên ngành
              </th>
              <th>
                Nghiên cứu chuyên sâu
              </th>
              <th>
                Lịch hẹn
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each doctor}}
            <tr id="{{this._id}}">
              <td>
                <div>
                  {{#isImage this._id "doctor"}}
                  <img src="{{this.img}}" alt="" />
                  {{else}}
                  <img src="/images/icons/undraw_male_avatar_323b.svg">
                  {{/isImage}}
                </div>
              </td>
              <td>
                {{this.name}}
              </td>
              <td>
                {{this.username}}
              </td>
              <td>
                {{this.email}}
              </td>
              <td>
                {{this.specialised}}
              </td>
              <td>
                {{this.field}}
              </td>
              <td>
                <a class="edit" href="/appointment/{{this._id}}">
                  <i class="fas fa-calendar"></i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<script src="/javascripts/users-search.js"></script>