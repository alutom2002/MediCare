<section class="admin-login" style="margin-top: 50px;">
  <div class="img-section">
    <img src="/images/icons/undraw_secure_login_pdn4.svg" alt="" />
  </div>
  <div class="login-container">
    <h4>
      Nhập mật khẩu để tiếp tục đăng nhập
      {{email}}
    </h4>
    <form action="/login/password" method="POST">
      <h3 class="error">
        {{error}}
      </h3>
      <div class="input-section">
        <input type="text" name="email" value="{{email}}" hidden />
        <input type="password" name="password" id="password" required />
        <label for="password">
          Mật khẩu
        </label>
        <div class="icon">
          <i class="far fa-eye-slash"></i>
          <i class="far fa-eye"></i>
        </div>
      </div>
      <a href="/forget/password">
        Quên mật khẩu
      </a>
      <div class="input-section">
        <input type="submit" value="Login" />
      </div>
    </form>
  </div>
</section>
<div class="modal error-modal">
  <h1>
    Có lỗi xảy ra. Vui lòng thử lại !!!
  </h1>
  <button
    class="normal"
    onclick="document.querySelector('.error-modal').classList.toggle('active')"
  >
    OK
  </button>
</div>